{
  "compilerOptions": {
    "jsx": "react-jsx",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018"]
  },
  "include": ["src/*", "*.d.ts"],
  "exclude": ["node_modules", "examples", "dist"]
}
